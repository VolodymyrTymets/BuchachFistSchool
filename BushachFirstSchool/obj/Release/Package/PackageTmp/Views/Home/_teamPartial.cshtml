@model IEnumerable<BushachFirstSchool.Domain.Entity.Teacher>
<div class="team-holder" id="teacher">
    <h1>Наші вчителі</h1>
    <div class="team-container center-block">
        @foreach (var item in @Model)
        {
            <div class="wrap">
                <div class="crop">
                    <a href="/teacer">
                        <img src="@Url.Action("GetImage", "Foto", new
                                   {
                                       Id = item.Foto.FotoId
                                   })" alt="@item.Surname +@item.Name">
                    </a>
                </div>
            </div>
        }       
      
    </div>
    <div class ="more-link center-block">
        @Html.ActionLink("Більше", "Index", "Teacher", null, new { @class = "more-link center-bloc" })
    </div>
</div>