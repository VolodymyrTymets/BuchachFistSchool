@using BushachFirstSchool.Models.Entitys
@model ForoCarousel


<div id="carousel_@Model.CuralesId" class="carousel slide carousel-helper" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
     
        @for (int i = 0; i < @Model.Foto.Count(); i++)
        {
            <li id="carusel_point" data-target="#carousel_@Model.CuralesId" data-slide-to="@i"></li>
        }
    </ol>
  

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        @foreach (var item in @Model.Foto)
        {
            <div class="item">
                <img src="@Url.Action("GetImage", "Foto", new
                   {
                       Id = item.FotoId
                   })" alt="" data-holder-rendered="true" class="carousel-img-helper">
                
            </div>
        }
        </div>
        <!-- Controls -->
    <a class="left carousel-control" href="#carousel_@Model.CuralesId" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel_@Model.CuralesId " role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    </div>

