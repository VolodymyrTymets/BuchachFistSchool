@model BushachFirstSchool.Models.SubjectTheamModel.SubjectTheamListViewModel
@{
    ViewBag.Title = "Теми";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="col-md-12 shadow-z-2" style="background-color:white">
    <div class="list-group">
        <div class="list-group-item">
            <div class="row-action-primary">
                <i class="mdi-action-question-answer">
                </i>
            </div>
            <div class="row-content">
                <div class="action-secondary">
                    <i class="mdi-material-info">
                    </i>
                </div>
                <h2>
                    Теми
                </h2>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <ul class="breadcrumb">
                <li>
                    @Html.ActionLink("Класи", "Index", "SchoolClass")
                </li>
                <li >
                    @Html.ActionLink(@Model.ClassName, "Index", "Subject")
                </li>
                <li class="active">
                   
                    <b>@Model.SubjectName</b>
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        @{Html.RenderPartial("_create", @Model.SubjectTheam);}
        <div class="col-md-4 col-md-offset-4">
            @{Html.RenderPartial("_loading");}
        </div>
    </div>

    @Html.Action("getSubjectTheamData")
</div>