@model IEnumerable< BushachFirstSchool.Domain.Entity.SubjectTheam>

<div id="SubjectTheamTable">
    @{Html.RenderPartial("_message_ajax");}


    <div class="col-lg-12">
        <table class="table  table-hover mini-panel">
            <tr>
                <th>
                    Таблиця Тем
                </th>
                <th>
                    
                </th>
                <th>

                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                  
                    <td>
                        @Html.ActionLink(" Правка", "Edit", new { id = item.TheamId }, new { @class = "mdi-editor-border-color btn btn-default" })
                    </td>
                    <td>
                        @Html.ActionLink(" Поняття", "RedirectToConceptPage", new { id = item.TheamId }, new { @class = "mdi-action-speaker-notes btn btn-default" })
                    </td>
                    <td>
                        @Html.ActionLink(" Тести", "List", "Test", new { theamId = item.TheamId.ToString() }, new { @class = "mdi-action-dns btn btn-default" })
                    </td>
                    <td>
                        @Html.ActionLink(" Тести пройти", "Past", "Test", new { theamId = item.TheamId.ToString() }, new { @class = "mdi-action-dns btn btn-default" })
                    </td>
                    <td>
                        @Ajax.ActionLink(" Видалити", "Delete", new
                                {
                                    Id = item.TheamId.ToString()
                                }, new AjaxOptions
                                {
                                    UpdateTargetId = "SubjectTheamTable",
                                    LoadingElementId = "loading",
                                    LoadingElementDuration = 1000,
                                    Confirm = "Ви дійсно бажаєте видалити? Усі дані буде втрачено.",

                                }, new
                                {
                                    @class = "mdi-content-clear btn btn-default",
                                })

                    </td>
                </tr>
            }

        </table>
    </div>
</div>