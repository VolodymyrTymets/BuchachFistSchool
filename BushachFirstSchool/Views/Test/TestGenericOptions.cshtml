@model BushachFirstSchool.Models.Test.TestGenericOptionsViewModel
@{
    AjaxOptions ajaxOpts = new AjaxOptions
     {
         UpdateTargetId = "TestsData",
         Url = Url.Action("GetGeneratedTests", new { theamId = Request.QueryString["theamId"] }),
         LoadingElementId = "loading",
         LoadingElementDuration = 1000,

     };
}

