@model IEnumerable<BushachFirstSchool.Domain.Entity.Pupil>



<div id="PupilTable">
    @{Html.RenderPartial("_message_ajax");}


    <div class="col-lg-12">
        <table class="table  table-hover mini-panel">
            <tr>
                <th>
                    Таблиця учнів
                </th>
                <th>

                </th>
                <th>

                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                       @Html.DisplayFor(modelItem => item.Surname) &nbsp; @Html.DisplayFor(modelItem => item.Name) &nbsp; @Html.DisplayFor(modelItem => item.Lastname) 
                    </td>

                    <td>
                        <ul>
                            <li>
                                @Html.ActionLink(" Правка", "Edit", new { id = item.PupilId }, new { @class = "mdi-editor-border-color btn btn-default" })
                            </li>
                            
                            <li>
                                @Ajax.ActionLink(" Видалити", "Delete", new
                                {
                                    Id = item.PupilId.ToString()
                                }, new AjaxOptions
                                {
                                    UpdateTargetId = "PupilTable",
                                    LoadingElementId = "loading",
                                    LoadingElementDuration = 1000,
                                    Confirm = "Ви дійсно бажаєте видалити? Усі дані буде втрачено.",

                                }, new
                                {
                                    @class = "mdi-content-clear btn btn-default",
                                })
                            </li>
                        </ul>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>