@model BushachFirstSchool.Domain.Entity.News

@{
    ViewBag.Title = "Бучацька ЗОШ №1 Новини/Редагувати";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="col-md-6 col-md-offset-3 panel">
    <div class="page-header">
        <h2>Редагування новини</h2>
    </div>

    @using (Html.BeginForm("Edit", "News", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-to-fill" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
   <h4>Редагування новини</h4>

            <ul>
                <li>
                    <i class="fa fa-user form-icon"></i>

                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)

                </li>
                <li>
                    <i class="fa fa-at form-icon"></i>
                    @Html.EditorFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </li>
                <li>
                    <i class="fa fa-university form-icon"></i>
                    @Html.LabelFor(model => model.Fotos)
                    <input type="file" multiple name="files">
                </li>

                <li>
                    <input type="submit" placeholder="Submit" value="Підтвердити" />
                </li>
            </ul>
    }

    <div>
        <a href="@Url.Action("Index","News")">
            <span class="glyphicon glyphicon-indent-right" aria-hidden="true">
            </span>
            Повернутися до списку
        </a>
    </div>
</div>