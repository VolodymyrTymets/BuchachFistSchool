@model BushachFirstSchool.Models.TeacherModel.TeacherCreateViewModel

@{
    ViewBag.Title = "Вчителі - Створити";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="col-md-6 col-md-offset-3 shadow-z-2" style="background-color:white">


    @using (Html.BeginForm("Create", "Teacher", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)



        <h4>Створення вчителя</h4>
           <fieldset>
        <legend>Дані для ситеми</legend>
               <input style="display:none" type="text" name="fakeusernameremembered" />
               <input style="display:none" type="password" name="fakepasswordremembered" />
        <div class="form-group">

            <label for="inputEmail" class="col-lg-2 control-label">@Html.DisplayNameFor(model => model.UserData.UserName)</label>
            <div class="col-lg-10">
                @Html.EditorFor(model => model.UserData.UserName)
                @Html.ValidationMessageFor(model => model.UserData.UserName)
            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail" class="col-lg-2 control-label">@Html.DisplayNameFor(model => model.UserData.Email)</label>
            <div class="col-lg-10">
                @Html.EditorFor(model => model.UserData.Email)
                @Html.ValidationMessageFor(model => model.UserData.Email)
            </div>
        </div>
               <div class="form-group">
                   <label for="inputEmail" class="col-lg-2 control-label">@Html.DisplayNameFor(model => model.UserData.Password)</label>
                   <div class="col-lg-10">
                       @Html.EditorFor(model => model.UserData.Password)
                       @Html.ValidationMessageFor(model => model.UserData.Password)
                   </div>
               </div>


        <legend>Дані Вчителя</legend>
        <div class="form-group">
            <label class="col-lg-2 control-label">@Html.DisplayNameFor(model => model.Teacher.Surname)</label>
            <div class="col-lg-10">
                @Html.EditorFor(model => model.Teacher.Surname)
                @Html.ValidationMessageFor(model => model.Teacher.Surname)
            </div>
        </div>

        <div class="form-group">
            <label  class="col-lg-2 control-label">@Html.DisplayNameFor(model => model.Teacher.Name)</label>
            <div class="col-lg-10">
                @Html.EditorFor(model => model.Teacher.Name)
                @Html.ValidationMessageFor(model => model.Teacher.Name)
            </div>
        </div>

        <div class="form-group">
            <label  class="col-lg-2 control-label">@Html.DisplayNameFor(model => model.Teacher.Lastname)</label>
            <div class="col-lg-10">
                @Html.EditorFor(model => model.Teacher.Lastname)
                @Html.ValidationMessageFor(model => model.Teacher.Lastname)
            </div>
        </div>

        <div class="form-group">
            <label  class="col-lg-2 control-label">@Html.DisplayNameFor(model => model.Teacher.Work)</label>
            <div class="col-lg-10">
                @Html.EditorFor(model => model.Teacher.Work)
                @Html.ValidationMessageFor(model => model.Teacher.Work)
            </div>
        </div>

        <div class="form-group">
           
                @Html.EditorFor(model => model.Teacher.Description)
                @Html.ValidationMessageFor(model => model.Teacher.Description)
            
        </div>

        
          <div class="form-group">
            <label for="inputFile" class="col-lg-2 control-label">File</label>
            <div class="col-lg-10">
               
                <input type="file" id="inputFile" multiple="" name="Teacher.PhotoBytes" class="form-control floating-label">
            </div>
        </div>
         <div class="form-group">
             <div class="col-lg-7 col-lg-offset-3">
                 <a href="@Url.Action("Index","Teacher")" class="btn btn-default"> Відміна</a>
                 <button type="submit" class="btn btn-primary">Підтвердити</button>
             </div>
        </div>
      </fieldset>

    }


</div>



