            <label class="col-lg-7 col-lg-offset-1 control-label">@Html.DisplayNameFor(model => model.countThesisInTestB)</label>
            <div class="col-lg-3 col-lg-offset-1">
                @Html.EditorFor(model => model.countThesisInTestB)
                @Html.ValidationMessageFor(model => model.countThesisInTestB)
            </div>
        </div> 
        <div class="form-group">
            <label class="col-lg-8 control-label">@Html.DisplayNameFor(model => model.countTestC)</label>
            <div class="col-lg-4">
