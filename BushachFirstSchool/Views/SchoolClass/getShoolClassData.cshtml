@using BushachFirstSchool.Domain.Entity
@model IEnumerable<SchoolClass>

<div id="schollClassTable">
    @{Html.RenderPartial("_message_ajax");}


    <div class="col-lg-12">
        <table class="table  table-hover mini-panel">
            <tr>
                <th>
                    Таблиця шкільних  класів
                </th>
                <th>

                </th>
                <th>

                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <div class="icon-preview">
                            @Html.ActionLink(" Правка", "Edit", new { id = item.SchoolClassId }, new { @class = "mdi-editor-border-color btn btn-default" })


                        </div>

                    </td>
                    <td>
                        @Html.ActionLink(" Передмети", "DetailsSubject", new { id = item.SchoolClassId }, new { @class = "mdi-av-playlist-add btn btn-default" })
                    </td>
                    <td>
                        @Html.ActionLink(" Учні", "DetailsPupil", new { id = item.SchoolClassId }, new { @class = "mdi-av-playlist-add btn btn-default" })
                    </td>
                    <td>

                        @Ajax.ActionLink(" Видалити", "getShoolClassData", new
                        {
                            deleteParametr = item.SchoolClassId.ToString()
                        }, new AjaxOptions
                        {
                            UpdateTargetId = "schollClassTable",
                            LoadingElementId = "loading",
                            LoadingElementDuration = 1000,
                            Confirm = "Ви дійсно бажаєте видалити? Усі дані буде втрачено.",

                        }, new
                        {
                            @class = "mdi-content-clear btn btn-default",
                        })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>