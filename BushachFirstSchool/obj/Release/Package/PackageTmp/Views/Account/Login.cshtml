@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="login-container   col-md-6 col-md-offset-3 shadow-z-2">
    @using (Html.BeginForm("Login", "Account", new { returnUrl = ViewContext.HttpContext.Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>Увійти</legend>
            <div class="form-group">
                <label for="inputEmail" class="col-lg-2 control-label">Логін</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="inputEmail" name="userName" required placeholder="Логін">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="col-lg-2 control-label">Пароль </label>
                <div class="col-lg-10">
                    <input type="password" class="form-control" id="inputPassword" name="password"  required placeholder="Пароль">
                </div>
            </div>
            @if(TempData["LoginFail"]!=null)
            {
                <span class="label label-danger">Невірний логін чи пароль. Спробуйте знову </span>
            }
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-9">                   
                    <button type="submit" class="btn btn-primary">Увійти</button>
                </div>
            </div>
        </fieldset>
    }
</div>