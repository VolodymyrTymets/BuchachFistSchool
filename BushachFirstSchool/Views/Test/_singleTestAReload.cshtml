@model BushachFirstSchool.Models.Test.SingleTestAReloadviewModel
<div class="row">
    <div class="col-lg-12  mini-panel">
        <form id="@Model.TestA.concept.ConceptId" class="testA">
            <p>
                Чи відповідає дане твердження: <b>@Model.TestA.concept.body</b> визначенню: <span id="@Model.TestA.thesis.body" class="testA_thesis"><i>@Model.TestA.thesis.body</i><</span>
            </p>
            <div class="radio radio-success">
                <label>
                    @if(Model.AnswerA.answer == 1){
                    <input type="radio" name="sample1" value="1" checked><span class="circle"></span><span class="check"></span>
                    }else{
                          <input type="radio" name="sample1" value="1" ><span class="circle"></span><span class="check"></span>
                    } 
                    Так
                </label>
            </div>
            <div class="radio radio-success">
                <label>
                   @if (Model.AnswerA.answer == -1) {
                        <input type="radio" name="sample1" value="-1" checked><span class="circle"></span><span class="check"></span>
                    }
                    else{
                        <input type="radio" name="sample1" value="-1"><span class="circle"></span><span class="check"></span>
                    }
 
                    Ні
                </label>
            </div>
        </form>
    </div>
</div>