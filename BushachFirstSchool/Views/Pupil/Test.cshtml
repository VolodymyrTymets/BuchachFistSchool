@model IEnumerable<BushachFirstSchool.Domain.Entity.Subject>

@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="col-md-12 shadow-z-2" style="background-color:white">
    <h2>Тестування</h2>
    <div class="row">
        <div class="col-lg-8">
            <p class="lead">Тут ви можете проходити тести із різних предметів</p>
        </div>
        <div class="col-lg-4">
            @{Html.RenderPartial("_loading");}
        </div>
    </div>
    <div class="col-lg-6">
        <div class="list-group mini-panel ">
            <p>Спершу оберіть предмет</p>
            @foreach (var item in Model)
            {

                <div class="list-group-item">
                    <div class="row-action-primary">
                        <i class="mdi-social-school">

                        </i>
                    </div>
                    <div class="row-content">
                        <div class="action-secondary">
                            <i class="mdi-material-info">
                            </i>
                        </div>
                        <h4 class="list-group-item-heading">
                            @Ajax.ActionLink(@item.Name, "getSubjectTheam", new
                                {
                                    IdSubject = item.SubjectId
                                }, new AjaxOptions
                                {
                                    UpdateTargetId = "subjectTheamDiv",
                                    Url = Url.Action("getSubjectTheam", new
                                    {
                                        IdSubject = item.SubjectId
                                    }),
                                    LoadingElementId = "loading",
                                    LoadingElementDuration = 1000,

                                }, new
                                {
                                    @class = "btn btn-default",
                                })
                        </h4>

                    </div>
                </div>
                <div class="list-group-separator"></div>
            }
         </div>
        </div>

    <div class="col-lg-6">
        <p>Потому оберіть тему</p>
        <div id="subjectTheamDiv">
            

        </div>

    </div>
</div>