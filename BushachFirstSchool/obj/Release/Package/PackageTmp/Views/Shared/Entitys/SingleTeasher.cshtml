@model BushachFirstSchool.Models.Entitys.SingleTeacher


<div class="teacher_container">
    <div class="service-details">
        <img src="@Model.TeacherImageUrl" alt="realm">
        <div class="service-hover-text">
            <h3>@Model.Teacher.Surname &nbsp; @Model.Teacher.Name &nbsp;</h3>
            <h4>@Model.Teacher.Work</h4>
            <p>@Model.Teacher.Description.ToString().Substring(0, @Model.Teacher.Description.ToString().Length > 100 ? 100: @Model.Teacher.Description.ToString().Length)... </p>
        </div>
        <div class="service-white service-text">
            <p>@Model.Teacher.Surname &nbsp; @Model.Teacher.Name &nbsp; @Model.Teacher.Lastname </p>
           
        </div>
    </div>
</div>